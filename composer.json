{
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "CapsuleLib\\": "lib/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "dump": "composer dump-autoload -o",
        "stan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "cs": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/phpunit --testdox",
        "qa": [
            "@dump",
            "@cs",
            "@stan",
            "@test"
        ]
    }
}
